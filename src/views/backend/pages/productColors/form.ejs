<!-- prettier-ignore -->
<% const COLLECTION = "colors" %> 
<% const BASE_PATH = `/admin/products/${COLLECTION}` %>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <% if(typeof alert != 'undefined') { %>
      <!--  -->
      <% alert.forEach(function(error) { %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= error.msg %>
        <button
          type="button"
          class="close"
          data-dismiss="alert"
          aria-label="Close"
        >
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <% }) %>
      <!--  -->
      <% } %>

      <div class="card card-primary">
        <!-- <div class="card-header">
          <h3 class="card-title"><%= title %></h3>
        </div> -->

        <form action="<%= BASE_PATH %>/save" method="POST">
          <div class="card-body">
            <div class="form-group">
              <label for="name">Tên</label>
              <input
                type="name"
                class="form-control"
                id="name"
                name="name"
                value="<%= data.name || '' %>"
                oninput="changeNameHandler(event)"
              />
            </div>

            <div class="form-group">
              <label for="hex">Giá trị thập lục phân</label>
              <input
                type="name"
                class="form-control"
                id="value"
                name="hex"
                placeholder="000000"
                value="<%= data.hex || '' %>"
              />
            </div>

            <div class="form-group">
              <label for="ordering">Thứ tự</label>
              <input
                type="number"
                class="form-control"
                id="ordering"
                name="ordering"
                placeholder="Vui lòng nhập thứ tự"
                value="<%= data.ordering || 1 %>"
              />
            </div>

            <div class="form-group">
              <label>Trạng thái</label>
              <select class="form-control" name="status" required>
                <option value="active" selected>Đang hoạt động</option>
                <option value="inactive">Không hoạt động</option>
              </select>
            </div>

            <input type="hidden" name="id" value="<%= id %>" />
          </div>

          <div class="card-footer">
            <a href="<%= BASE_PATH %>" class="btn btn-default">Hủy</a>
            <button type="submit" class="btn btn-primary float-right">
              <%= id ? "Sửa" : "Thêm" %>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
