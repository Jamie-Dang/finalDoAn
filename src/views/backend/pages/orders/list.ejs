<!-- prettier-ignore -->
<% include ./../../helpers/filterStatusHelper.ejs %>
<% include ./../../helpers/statusHelper.ejs %>
<% include ./../../helpers/orderingHelper.ejs %>
<% include ./../../helpers/highlightHelper.ejs %>
<% include ./../../helpers/paginationHelper.ejs %>
<% include ./../../helpers/actionHelper.ejs %>

<% const COLLECTION = "orders" %> 
<% const BASE_PATH = `/admin/${COLLECTION}` %>
<% const BASE_IMAGE_PATH = `/images/${COLLECTION}` %>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <!-- <div class="card-header"></div> -->

        <div class="card-body">
          <div class="float-left">
            <!-- <div class="float-left"> -->
            <%- filterStatusHelper(COLLECTION, filterStatus) %>
          </div>

          <form
            class="form-inline my-2 my-lg-0 float-right"
            action="<%= BASE_PATH %>"
            method="GET"
          >
            <input
              class="form-control mr-sm-2"
              type="search"
              name="search"
              placeholder=""
              aria-label="Tìm kiếm"
              value="<%= search || '' %>"
            />
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
              Tìm kiếm
            </button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="card">
        <!-- <div class="card-header"> -->
        <!-- <h3 class="card-title h-100 align-middle">Bordered Table</h3> -->
        <!-- <a href="<%= BASE_PATH %>/form" class="btn btn-primary float-right">
            Thêm mới
          </a> -->
        <!-- </div> -->

        <div class="card-body">
          <table class="table table-bordered">
            <thead class="text-center">
              <tr>
                <!-- <th style="width: 10px">#</th> -->
                <!-- <th style="width: 12px">Chọn</th> -->
                <th>Mã đơn</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Ngày tạo</th>
                <th>Hành động</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach((item) => { %>
              <!-- <tr>
                <td class="align-middle">
                  <div class="form-check-inline">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value=""
                      id="flexCheckDefault"
                    />
                    <label
                      class="form-check-label d-none"
                      for="flexCheckDefault"
                    >
                      checkbox
                    </label>
                  </div>
                </td> -->
                <td><%= item._id %></td>
                <td>
                  <%= item.total.toLocaleString("vi-VN", { style: "currency",
                  currency: "VND", }); %>
                </td>

                <td class="align-middle text-center" style="width: 200px">
                  <% if (item.status == 'pending') { %>
                  <span class="badge badge-warning">Chờ xử lý</span>
                  <% } else if (item.status == 'confirmed') { %>
                  <span class="badge badge-primary">Đã xác nhận</span>
                  <% } else if (item.status == 'cancelled'){ %>
                  <span class="badge badge-danger">Đã hủy</span>
                  <% } %>
                </td>

                <td class="align-middle text-center" style="width: 200px">
                  <%= moment(item.createdAt).format("DD/MM/YYYY") %>
                </td>

                <td class="align-middle" style="width: 160px">
                  <div class="d-flex justify-content-center">
                    <a
                      href="<%= BASE_PATH %>/form/<%= item._id %>"
                      class="btn btn-sm btn-primary"
                    >
                      <i class="fas fa-edit"></i>
                    </a>
                  </div>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <div class="card-footer clearfix">
          <%- paginationHelper(BASE_PATH, currentPage, totalPages) %>
        </div>
      </div>
    </div>
  </div>
</div>
