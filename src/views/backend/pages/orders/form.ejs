<!-- prettier-ignore -->
<% const COLLECTION = "orders" %> 
<% const BASE_PATH = `/admin/${COLLECTION}` %>
<% const BASE_IMAGE_PATH = `/images/${COLLECTION}` %>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-6">
      <div class="card card-primary">
        <div class="card-body">
          <!-- <h1 class="text-center">Sản phẩm</h1> -->
          <% items.forEach(function(item) { %>
          <div>
            <h3><%= item.product.name%></h3>
            <p>Kích cỡ: <%=item.size %></p>
            <p>Giá: <%=item.price %></p>
            <p>Số lượng: <%=item.quantity %></p>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <% if(typeof alert != 'undefined') { %>
      <!--  -->
      <% alert.forEach(function(error) { %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= error.msg %>
        <button
          type="button"
          class="close"
          data-dismiss="alert"
          aria-label="Close"
        >
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <% }) %>
      <!--  -->
      <% } %>

      <div class="card card-primary">
        <!-- <div class="card-header">
          <h3 class="card-title"><%= title %></h3>
        </div> -->

        <form action="<%= BASE_PATH %>/save" method="POST">
          <div class="card-body">
            <div class="form-group">
              <label for="name">Mã đơn</label>
              <input
                type="name"
                class="form-control"
                id="name"
                name="name"
                value="<%= data._id || '' %>"
                disabled
              />
            </div>

            <div class="form-group">
              <label for="total">Tổng tiền</label>
              <input type="text" class="form-control" id="total" name="total"
              value="<%= data.total.toLocaleString("vi-VN", { style: "currency",
              currency: "VND", })|| '' %>" disabled />
            </div>

            <div class="form-group">
              <label for="name">Tên</label>
              <input
                type="name"
                class="form-control"
                id="name"
                name="name"
                placeholder=""
                value="<%= data.name || '' %>"
                disabled
              />
            </div>

            <div class="form-group">
              <label for="phone">Số điện thoại</label>
              <input
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value="<%= data.phone %>"
                disabled
              />
            </div>

            <div class="form-group">
              <label for="ordering">Địa chỉ</label>
              <input
                type="text"
                class="form-control"
                id="ordering"
                name="ordering"
                value="<%= data.address || 1 %>"
                disabled
              />
            </div>

            <div class="form-group">
              <label>Trạng thái</label>
              <select class="form-control" name="status" required>
                <<% if (data.status == 'pending') { %>
                <option value="pending">Chờ xử lý</option>
                <option value="confirmed">Đã xác nhận</option>
                <option value="cancelled">Đã hủy</option>

                <% } else if (data.status == 'confirmed') { %>
                <option value="confirmed">Đã xác nhận</option>
                <option value="pending">Chờ xử lý</option>
                <option value="cancelled">Đã hủy</option>
                <% } else { %>
                <option value="cancelled">Đã hủy</option>
                <option value="confirmed">Đã xác nhận</option>
                <option value="pending">Chờ xử lý</option>
                <% } %>
              </select>
            </div>

            <input type="hidden" name="id" value="<%= id %>" />
          </div>

          <div class="card-footer">
            <a href="<%= BASE_PATH %>" class="btn btn-default">Hủy</a>
            <button type="submit" class="btn btn-primary float-right">
              <%= id ? "Sửa" : "Thêm" %>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
