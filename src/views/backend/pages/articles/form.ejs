<!-- prettier-ignore -->
<% const COLLECTION = "articles" %> 
<% const BASE_PATH = `/admin/${COLLECTION}` %>
<% const BASE_IMAGE_PATH = `/images/${COLLECTION}` %>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <% if(typeof alert != 'undefined') { %>
      <!--  -->
      <% alert.forEach(function(error) { %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= error.msg %>
        <button
          type="button"
          class="close"
          data-dismiss="alert"
          aria-label="Close"
        >
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <% }) %>
      <!--  -->
      <% } %>

      <div class="card card-primary">
        <!-- <div class="card-header">
          <h3 class="card-title"><%= title %></h3>
        </div> -->

        <form
          action="<%= BASE_PATH %>/save"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="card-body">
            <div class="mt-3 mb-4 text-center">
              <% if (data.image) { %>
              <img
                src="<%= BASE_IMAGE_PATH %>/<%= data.image %>"
                alt="Preview"
                class="img-thumbnail preview-image object-fit-cover"
                style="max-height: 300px"
              />
              <% } else { %>
              <img
                src=""
                alt="Preview"
                class="img-thumbnail preview-image object-fit-cover"
                style="max-height: 300px"
              />
              <% } %>
            </div>
            <div class="form-group">
              <label for="image">Hình ảnh</label>
              <div class="custom-file">
                <input
                  type="file"
                  class="custom-file-input"
                  id="image"
                  name="image"
                  accept="image/*"
                  onchange="changeImageHandler()"
                />
                <label class="custom-file-label" for="image"
                  ><%= data.image ? data.image : "Chọn file" %></label
                >
              </div>
            </div>

            <div class="form-group">
              <label>Thể loại</label>
              <select class="form-control" name="category">
                <!-- <option value=""></option> -->
                <% categories.forEach( category => {%>
                <option value="<%= category._id %>">
                  <%= category.name %>
                </option>
                <% }) %>
              </select>
            </div>

            <div class="form-group">
              <label for="name">Tên</label>
              <input
                type="name"
                class="form-control"
                id="name"
                name="name"
                placeholder="Vui lòng nhập tên vật phẩm"
                value="<%= data.name || '' %>"
                oninput="changeNameHandler(event)"
              />
            </div>

            <div class="form-group">
              <label for="name">Slug</label>
              <input
                type="name"
                class="form-control"
                id="slug"
                name="slug"
                placeholder=""
                value="<%= data.slug || '' %>"
              />
            </div>

            <div class="form-group">
              <label for="ordering">Thứ tự</label>
              <input
                type="number"
                class="form-control"
                id="ordering"
                name="ordering"
                placeholder="Vui lòng nhập thứ tự"
                value="<%= data.ordering || 1 %>"
              />
            </div>

            <div class="form-group">
              <label>Trạng thái</label>
              <select class="form-control" name="status" required>
                <% if (data.status == 'active') { %>
                <option value="active" selected>Đang hoạt động</option>
                <option value="inactive">Không hoạt động</option>
                <% } else { %>
                <option value="active">Đang hoạt động</option>
                <option value="inactive" selected>Không hoạt động</option>
                <% } %>
              </select>
            </div>

            <div class="form-group">
              <label>Ưu tiên hiển thị</label>
              <select class="form-control" name="isPriority" required>
                <% if (data.isPriority) { %>
                <option value="true" selected>Có</option>
                <option value="false">Không</option>
                <% } else { %>
                <option value="true">Có</option>
                <option value="false" selected>Không</option>
                <% } %>
              </select>
            </div>

            <div class="form-group">
              <label for="editor">Nội dung</label>
              <textarea
                class="form-control"
                name="content"
                id="editor"
                rows="10"
              >
              <!--  -->
              <%= data.content || '' %>
              </textarea>
            </div>

            <input type="hidden" name="id" value="<%= id %>" />
          </div>

          <div class="card-footer">
            <a href="<%= BASE_PATH %>" class="btn btn-default">Hủy</a>
            <button type="submit" class="btn btn-primary float-right">
              <%= id ? "Sửa" : "Thêm" %>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
